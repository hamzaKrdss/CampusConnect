<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newestbg"
    tools:context=".AdministratorPage">



    <LinearLayout
        android:id="@+id/topMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/univers_choice"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit_txt"
            android:layout_gravity="center"
            android:hint="Ã¼niversite"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/space"
            android:layout_width="10dp"
            android:layout_height="50dp"
            />

        <AutoCompleteTextView
            android:id="@+id/mevki_choice"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit_txt"
            android:layout_gravity="center"
            android:hint="mevki"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topMenu"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <AutoCompleteTextView
            android:id="@+id/timeChoice"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit_txt"
            android:layout_gravity="center"
            android:hint="Zaman"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>



        <TextView
            android:id="@+id/space0"
            android:layout_width="10dp"
            android:layout_height="50dp"
            />

        <AutoCompleteTextView
            android:id="@+id/hobby_choice"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit_txt"
            android:layout_gravity="center"
            android:hint="Hobi"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/topMenu"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/searching_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_search_24"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/middleMenu"
        android:layout_marginTop="16dp"/>

</RelativeLayout>