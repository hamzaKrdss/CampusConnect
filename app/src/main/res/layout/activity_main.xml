<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/campusconv3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/campuss"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:text="CampusConnect"
        android:gravity="center|left"
        android:paddingStart="10dp"
        android:textSize="45sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_edit_txt"
        android:drawableLeft="@drawable/new_baseline_person_24"
        android:drawablePadding="10dp"
        android:elevation="5dp"
        android:hint="Eposta"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/campuss"
        android:layout_marginTop="100dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_edit_txt"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:elevation="5dp"
        android:hint="Sifre"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mail"
        android:layout_marginTop="20dp"/>

    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="90dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:text="Giriş"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabın yok mu? "
            android:textSize="24sp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/regpg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kayıt Ol"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>